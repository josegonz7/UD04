package ejercicios;

import java.util.Arrays;
import java.util.Scanner;

public class Boletin2 {
	public static void main(String[] args) {
		int[] array = { 2, 3, 4, 5 };
//		estaEnArrayInt(array);
//		posicionEnArray(array);
		volteaArrayInt(array);
	}

	/*
	 * estaEnArrayInt: Dice si un número está o no dentro de un array.
	 */

	public static boolean estaEnArrayInt(int[] array) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Dime un numero: ");
		int numero = sc.nextInt();
		
		boolean esta = false;

		for (int i = 0; i < array.length; i++) {
			if (array[i] == numero) {
				esta = true;
			}
		}

		if (esta) {
			System.out.println("Está en el array");
		} else {
			System.out.println("No está en el array");
		}

		return esta;
	}



/*
 * posicionEnArray: Busca un número en un array y devuelve la posición (el
 * índice) en la que se encuentra. En caso de no estar devuelve -1.
 */

	public static int posicionEnArray(int[] array) {
	    Scanner sc = new Scanner(System.in);

	    System.out.println("Dime un numero: ");
	    int numero = sc.nextInt();

	    int posicion = -1;

	    for (int i = 0; i < array.length; i++) {
	        if (array[i] == numero) {
	            posicion = i;
	        }
	    }

	    if (posicion != -1) {
	        System.out.println("Está en la posición: " + posicion);
	    } else {
	        System.out.println("No está en el array");
	    }

	    sc.close();

	    return posicion;
	}


	

/*
 * volteaArrayInt: Le da la vuelta a un array.
 */
	/*
	 * volteaArrayInt: Le da la vuelta a un array.
	 */
	public static int[] volteaArrayInt(int[] array) {
	    int[] invertido = new int[array.length];

	    for (int i = 0; i < array.length; i++) {
	        invertido[i] = array[array.length - 1 - i];
	    }

	    return invertido;
	}

	
	
	
}

