package ejemplos;

import java.util.Arrays;

public class Ejemplo1 {

	public static void main(String[] args) {
		// declaramos las variables (2 formas)
		//int edades[];
		//int[] edades2;
		
		// si quieres asignar un valor a esas variables
		// tenemos dos opciones:
		int edades[];
		edades = new int[5];
		
		System.out.println(edades[0]);
		
		edades [0] = 85;
		edades [1] = 3;
		edades [2] = 19;
		edades [3] = 23;
		edades[4] = 7;
		
		System.out.println(Arrays.toString(edades));
	}
}
