package ejercicios;

import java.util.Arrays;
import java.util.Scanner;

public class Boletin2 {
	public static void main(String[] args) {
		int[] t = {3, 7, 9, 11};
	}
	
	
	/*
	 * estaEnArrayInt: Dice si un número está o
	 *  no dentro de un array.
	 */
	
	 public static boolean estaEnArrayInt(int[] array) {
		         boolean esta = false;
		         
		         for (int i = 0; i < array.length; i++) {
		             int numero;
					 if (array[i] == numero) {
		                 esta = true;
		             }
		         }
		         
		         if (esta) {
		             System.out.println("Está en el array");
		         } else {
		             System.out.println("No está en el array");
		         }
		         
		         return esta;
	 }

	       
	       
	 }
	
	
	
