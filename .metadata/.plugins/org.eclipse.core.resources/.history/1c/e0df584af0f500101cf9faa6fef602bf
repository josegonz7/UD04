package ejercicios;

import java.util.Arrays;
import java.util.Scanner;

public class Boletin2 {
	public static void main(String[] args) {
		int[] array = { 2, 3, 4, 5 };
		estaEnArrayInt(array);
	}

	/*
	 * estaEnArrayInt: Dice si un número está o no dentro de un array.
	 */

	public static boolean estaEnArrayInt(int[] array) {
		boolean esta = false;

		for (int i = 0; i < array.length; i++) {
			int numero = 0;
			if (array[i] == numero) {
				esta = true;
			}
		}

		if (esta) {
			System.out.println("Está en el array");
		} else {
			System.out.println("No está en el array");
		}

		return esta;
	}

}

